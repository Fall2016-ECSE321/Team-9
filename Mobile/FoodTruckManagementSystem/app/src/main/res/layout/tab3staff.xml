        android:text="Friday"
        android:id="@+id/friday"
        android:layout_below="@+id/thursdayfriday_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />
    <TextView
