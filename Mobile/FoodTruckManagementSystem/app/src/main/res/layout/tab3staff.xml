        android:text="Wednesday"
        android:id="@+id/wednesday"

        android:layout_below="@+id/tuesdaywednesday_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />
    <TextView
